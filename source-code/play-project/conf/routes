# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
#GET     /                           controllers.Application.index()
GET     /                           controllers.Application.test()
GET     /dig                        controllers.Application.dig()
GET     /dig/:link                  controllers.Application.tunnel(link:String)
POST    /signup                     controllers.Users.postForm()
GET     /signup                     controllers.Users.create()
GET     /signin                     controllers.Users.signin()
GET     /account                    controllers.Users.account(username:String)
GET     /:link                      controllers.Application.shovel(link:String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.versioned(path="/public", file: Asset)
